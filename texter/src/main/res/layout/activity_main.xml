<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.org.seva.texter.activities.MainActivity">
	<include
		android:id="@+id/tool_bar"
		layout="@layout/tool_bar" />

	<!-- Setting tools:targetApi to lollipop prevents the warning that android:elevation -->
    <!-- parameter is not available prior to API 21. -->
	<pl.org.seva.texter.layouts.SlidingTabLayout
		android:id="@+id/tabs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="2dp"
		android:background="@color/ColorPrimary"
		tools:targetApi="lollipop" />

    <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    />

</LinearLayout>
        

